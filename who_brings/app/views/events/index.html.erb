<%= render "layouts/navbar" %>

<h1>Events</h1>

<ul>
	<% @events.each do |event| %>
	<li>
		<div>Title: <%=event.title%>
		</div>
		<div>Description: <%=event.description%>
		</div>
		<div>Start Date: <%=event.start_date%>
		</div>
		<div>End Date: <%=event.end_date%>
		</div>
		<div>Start Time: <%=event.start_time%>
		</div>
		<div>End Time: <%=event.end_time%>
		</div>
		<%= link_to "Create New Task List", "/events/#{event.id}/tasks/new" %> <br>
		<%= link_to "Current Task List", "/events/#{event.id}/tasks" %>
	</li>
	<% end %>
</ul>